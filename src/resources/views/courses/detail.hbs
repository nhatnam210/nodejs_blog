<div class="mt-4">
    <div class="row">
        <div class="col-lg-3">
            <button class="text-uppercase btn btn-warning">học ngay</button>
            <a href="/courses/{{course._id}}/edit" class="text-uppercase btn btn-warning">chỉnh sửa</a>
            <h6 class="mt-2">Mức độ: {{course.level}}</h6>
        </div>
        <div class="col-lg-9">
            <h2>{{course.name}}</h2>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{course.videoId}}"
                title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
                <p>{{course.description}}</p>
        </div>
    </div>
</div>